.main
    flex-center()
.subtitles
    width 80%
    font-family font2
    font-size sizeTitle
    color colorDark
    font-weight 400
    margin 0 auto
    margin-top 3rem
    margin-bottom 1rem
    img
        height 1.3rem
.cards__items-wrap
    width 90%
.cards_items
    display flex
    align-items center
    width 100%
    margin-top 1rem
    padding 1rem
    box-shadow: 0px 5px 10px #00000012
    border-radius: 14px;
    picture
        picture-icos()
        border-radius 50%
    h3
        font-size sizeSmall
        font-weight 400
        color colorDark
    h2
        font-size sizeSubTitle
        font-weight bold
        color colorDark
.credit__data-wrap
    flex-center()
    flex-direction row
    flex-wrap wrap
    margin-top 2rem
.credit_data
    margin 0 2rem
    text-align center
    h3
        font-size sizeSmall
        color colorDark
        font-weight 400
        border-bottom 2px solid colorLine
        padding-bottom 1rem
        margin-bottom 1rem
        margin-top 1rem
    em
        font-size sizeSubTitle
        color colorDark
        font-weight bold
.destiny-wrap
    flex-center()
    color colorDark
    picture
        picture-icos()
    p
        width 90%
        font-size sizeExtraSmall
        font-weight bold
.destiny
    display flex
    align-items center
    h2
        font-size sizeSmall
        font-weight 400
    p
        font-size sizeSubTitle
        font-weight bold
.next__step
    width 90%
    display flex
    align-items center
    flex-direction row
    margin 0 auto
    margin-top 1.5rem
    font-size sizeSmall
    color colorDark
